<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overview_horizontal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".BaseOverviewActivity" >

        <HorizontalScrollView
            android:id="@+id/hScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants" >

            <ScrollView
                android:id="@+id/vScroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <AbsoluteLayout
                    android:id="@+id/AbsoluteLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:scaleType="matrix"
                        android:scrollbars="horizontal|vertical"
                        android:src="@drawable/equator_backdrop" />

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="128dp"
                        android:layout_height="78dp"
                        android:layout_x="227dp"
                        android:layout_y="96dp"
                        android:src="@drawable/ref_moonbase" />

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="128dp"
                        android:layout_height="78dp"
                        android:layout_x="77dp"
                        android:layout_y="19dp"
                        android:src="@drawable/ref_smelthingfacility" />

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="128dp"
                        android:layout_height="78dp"
                        android:layout_x="42dp"
                        android:layout_y="156dp"
                        android:src="@drawable/ref_solarpanelarray" />

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="128dp"
                        android:layout_height="78dp"
                        android:layout_x="234dp"
                        android:layout_y="240dp"
                        android:src="@drawable/ref_icemine" />

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="128dp"
                        android:layout_height="78dp"
                        android:layout_x="555dp"
                        android:layout_y="216dp"
                        android:src="@drawable/ref_regolithprocessor" />

                </AbsoluteLayout>
            </ScrollView>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/buildingname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Funds: $100.000.000"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month: 1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Button02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showBaseOverviewScreen"
                android:text="Menu"
                android:textSize="@dimen/tinyButtonText" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showResourcesScreen"
                android:text="Resources"
                android:textSize="@dimen/tinyButtonText" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showResourcesScreen"
                android:text="Export"
                android:textSize="@dimen/tinyButtonText" />
        </LinearLayout>

        <Button
            android:id="@+id/Button03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showResourcesScreen"
            android:text="Next Month"
            android:textSize="@dimen/tinyButtonText" />
    </LinearLayout>

</LinearLayout>